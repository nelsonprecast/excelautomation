
@{
    ViewData["Title"] = "New Project";
}

<style>
    .form-control {
        font-size: .8rem;
        font-weight: 100;
        padding-left: 2px;
        padding-top: 2px;
        padding-right: 2px;
        padding-bottom: 2px;
    }

</style>

<div class="text-center">
    <form action="Save" method="POST" role="form" enctype="multipart/form-data">
        <table style="width:100%" class="table">
            <tr style="text-align:left;">
                <td>
                    Project Name:
                </td>
                <td>
                    <input id="projectname" name="projectname" class="form-control" />
                </td>
            </tr>
            <tr>
                <td>
                    
                    <table style="width:80%">
                        <tr>
                            <td style="text-align:left;">Nominal CF</td>
                            <td><input id="NominalCF" name="NominalCF" onkeypress="return isNumberKey(this, event);" onchange="CalculateTotalNominalOnChangeOfNominalCF();" class="form-control" type="text" /></td>
                        </tr>
                        <tr>
                            <td style="text-align:left;">Actual CF</td>
                            <td><input id="ActualCF" name="ActualCF" onkeypress="return isNumberKey(this, event);" onchange="CalculateTotalActualOnChangeOfActualCF();" class="form-control" type="text" /></td>
                        </tr>
                    </table>
                </td>
                <td></td>
            </tr>
            <tr>
                <td colspan="2">
                    <table style="width:100%" id="RowsTable">
                        <tr>
                            <th class="fw-medium">W/D</th>
                            <th class="fw-medium">Item Name</th>
                            <th class="fw-medium">

                                Disposition
                                (Special Notes)

                            </th>
                            <th class="fw-medium">

                                Detail
                                #/Page

                            </th>
                            <th class="fw-medium">Section</th>
                            <th class="fw-medium">

                                Takeoff
                                Color

                            </th>
                            <th class="fw-medium">Length</th>
                            <th class="fw-medium">
                                X
                                Width
                            </th>
                            <th class="fw-medium">

                                Y
                                HT

                            </th>
                            <th class="fw-medium">
                                Pcs
                            </th>
                            <th class="fw-medium">
                                Total
                                LF
                            </th>
                            <th class="fw-medium">
                                Act SF
                                CF/LF
                            </th>
                            <th class="fw-medium">Act CF/Pcs</th>
                            <th class="fw-medium">Total Act CF</th>
                            <th class="fw-medium">Nom. CF/LF</th>
                            <th class="fw-medium">Nom. CF/Pcs</th>
                            <th class="fw-medium">Total Nom. CF</th>
                            <th class="fw-medium">Mold QTY</th>
                            <th class="fw-medium">Total Actual</th>
                            <th class="fw-medium">Total Nominal</th>
                        </tr>
                        <tr>
                            <td>
                                <select id="row1WD" name="row1WD" class="form-control" style="width:50px;">
                                    <option value="Dry">Dry</option>
                                    <option value="Wet">Wet</option>
                                </select>
                            </td>
                            <td>
                                <input id="row1ItemName" name="row1ItemName" class="form-control" type="text" />
                            </td>
                            <td>
                                <input id="row1DispositionSpecialNote" name="row1DispositionSpecialNote" class="form-control" type="text" />
                            </td>
                            <td>
                                <input id="row1DetailPage" name="row1DetailPage" class="form-control" type="text" />
                            </td>
                            <td>
                                <input type="file" id="row1File" name="row1File" class="form-control" accept="image/*" />
                            </td>
                            <td>
                                <input id="row1TakeOffColor" name="row1TakeOffColor" type="text" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1Length" name="row1Length" type="text" onkeypress="return isNumberKey(this, event);" class="form-control" onchange="CalculateActCFPcs(1);CalculateNomCFPcs(1);" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1Width" name="row1Width" type="text" onkeypress="return isNumberKey(this, event);" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1Height" name="row1Height" type="text" onkeypress="return isNumberKey(this, event);" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1Pieces" name="row1Pieces" type="text" onkeypress="return isNumberKey(this, event);" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1TotalLF" name="row1TotalLF" type="text" onkeypress="return isNumberKey(this, event);" onchange="CalculateTotalActCF(1);CalculateTotalNomCF(1);" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1ActSFCFLF" name="row1ActSFCFLF" type="text" onkeypress="return isNumberKey(this, event);" class="form-control" onchange="CalculateActCFPcs(1);CalculateTotalActCF(1);" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1ActCFPcs" name="row1ActCFPcs" readonly="readonly" type="text" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1TotalActCF" name="row1TotalActCF" readonly="readonly" type="text" onchange="CalculateTotalActual(1);" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1NomCFLF" name="row1NomCFLF" type="text" class="form-control" onkeypress="return isNumberKey(this, event);" onchange="CalculateNomCFPcs(1);CalculateTotalNomCF(1);" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1NomCFPcs" name="row1NomCFPcs" readonly="readonly" type="text" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1TotalNomCF" name="row1TotalNomCF" readonly="readonly" type="text" class="form-control" onchange="CalculateTotalNominal(1)" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1MoldQTY" name="row1MoldQTY" type="text" onkeypress="return isNumberKey(this, event);" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1TotalActual" name="row1TotalActual" readonly="readonly" type="text" class="form-control" style="width:50px" />
                            </td>
                            <td>
                                <input id="row1TotalNominal" name="row1TotalNominal" readonly="readonly" type="text" class="form-control" style="width:50px" />
                            </td>
                        </tr>
                    </table>

                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:left;">
                    <input type="button" value="New Row" onclick="OnAddRow();" class="btn btn-primary" />
                </td>
            </tr>
        </table>
        <div class="container">
            <div class="row align-items-start">
                <div class="col">
                   
                </div>
                <div class="col">
               
                </div>
                <div class="col">
                    <button type="submit" onclick="return Validate();" class="btn btn-primary">Submit </button>
                </div>
            </div>
        </div>
    </form>
</div>

